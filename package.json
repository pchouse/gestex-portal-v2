    "build": "(shx rm -r src/public_dist/* || echo 'src/public_dist/*') && (shx rm -r src/public/js/* || echo 'Folder src/public/js/* not exist') && tsc && gulp less && webpack --config webpack-login.config.js && webpack --config webpack-index.config.js && (shx cp -r ./node_modules/tinymce/skins src/public/)",
